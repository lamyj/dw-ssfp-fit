Bootstrap: docker
From: debian:buster

%setup
  mkdir ${SINGULARITY_ROOTFS}/dw_ssfp_fit
  cp -a src CMakeLists.txt ${SINGULARITY_ROOTFS}/dw_ssfp_fit

%post
  set -e
  
  apt-get update
  apt-get install -y gnupg software-properties-common wget
  wget -O - https://iris-packages.s3.unistra.fr/gpg.key | apt-key add -
  add-apt-repository "deb https://iris-packages.s3.unistra.fr/apt $(lsb_release -cs) main"
  apt-get update
  apt-get install -y \
    build-essential cmake libtbb-dev openssh-client libboost-mpi-dev \
    libboost-test-dev libeigen3-dev libpython3-dev pybind11-dev \
    python3 python3-dicomifier python3-distutils python3-matplotlib \
    python3-mpi4py python3-nibabel python3-numpy
  
  # Install Pagmo2 from source
  mkdir pagmo
  cd pagmo
  wget https://github.com/esa/pagmo2/archive/refs/tags/v2.17.0.tar.gz
  tar xf v2.17.0.tar.gz
  cd pagmo2-2.17.0
  mkdir build
  cd build
  cmake \
    -DPAGMO_BUILD_TESTS=OFF -DPAGMO_BUILD_TUTORIALS=OFF -DPAGMO_WITH_EIGEN3=ON \
    -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr/local \
    -DCMAKE_CXX_FLAGS="-march=skylake-avx512" \
    ..
  cmake  --build . --target install --parallel
  cd ../../../
  rm -rf pagmo
  
  # Install xsimd from source
  mkdir xsimd
  cd xsimd
  wget https://github.com/xtensor-stack/xsimd/archive/refs/tags/7.5.0.tar.gz
  tar xf 7.5.0.tar.gz
  cd xsimd-7.5.0
  cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr/local .
  cmake  --build . --target install --parallel
  cd ../../
  rm -rf xsimd
  
  # Install Sycomore from source
  mkdir sycomore
  cd sycomore
  wget https://github.com/lamyj/sycomore/archive/refs/tags/v1.3.0.tar.gz
  tar xf v1.3.0.tar.gz
  cd sycomore-1.3.0
  mkdir build
  cd build
  cmake \
    -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr/local \
    -DCMAKE_CXX_FLAGS="-march=skylake-avx512" \
    -DBUILD_TESTING=OFF -DPYTHON_EXECUTABLE=/usr/bin/python3 \
    ..
  cmake  --build . --target install --parallel
  cd ../../../
  rm -rf sycomore
  
  #Â Build DW-SSFP fit
  cd /dw_ssfp_fit
  pwd
  ls -l
  mkdir build
  cd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr/local -DCMAKE_CXX_FLAGS="-march=skylake-avx512" \
    -Dsycomore_DIR=/usr/local/lib/CMake/sycomore \
    ..
  cmake  --build . --target install --parallel
  cd ../..
  rm -rf dw_ssfp_fit

%environment
  export LD_LIBRARY_PATH=/usr/local/lib
  export PYTHONPATH=/usr/local/lib/python3/dist-packages
